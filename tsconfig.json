{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": false,
		"isolatedModules": true,
		"lib": [
			"es2022",
			"DOM",
			"DOM.Iterable"
		],
		"strictNullChecks": true,
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "Bundler",
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022",
		"verbatimModuleSyntax": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"allowJs": true,
		"jsx": "preserve",
		"noEmit": true,
		"paths": {
			"@/*": [
				"./src/*"
			],
			"public/*": [
				"./public/*"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"prettier.config.js",
		"postcss.config.cjs",
		"cspell.config.cjs",
		".eslintrc.cjs"
	],
	"exclude": [
		"node_modules"
	]
}
